<!-- Page Content -->
<section id="view-tours-main" class="mb-3">
    <div class="container mb-3">
        <div class="row justify-content-center align-items-center text-center">
            <div class="col-lg-6">
                <h1 class="mt-5">Browse</h1>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-center align-items-center text-center mb-5">
            <div class="col-lg-10">
                <h2 class="mt-3">By neighborhood</h2>
                {{#each (returnAvailableNeighborhoods tours)}}
                <a href="/browse/{{this}}" class="btn btn-secondary btn-lg m-2" role="button">{{this}}</a>
                {{else}}
                <h3 class="text-center font-italic">There are currently no tours available to browse by neighhood.</h3>
                {{/each}}

                <h2 class="mt-5">By tag</h2>
                {{#each (returnUniqueTags tours)}}
                    {{#if this}}
                        <a href="/browse/tags/{{this}}" class="btn btn-info btn-lg m-2" role="button">{{this}}</a>
                    {{/if}}
                {{else}}
                <h3 class="text-center font-italic">There are currently no tours available to browse by tag.</h3>
                {{/each}}
            </div>
        </div>
    </div>
</section>